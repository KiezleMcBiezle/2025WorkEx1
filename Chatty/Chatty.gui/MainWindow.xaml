<Window x:Class="ChatappUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="450"
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- STYLES FOR HOVER EFFECTS -->
    <Window.Resources>
        <!-- Base style for Minimize and Maximize buttons -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Special style for the Close button (red hover) -->
        <Style x:Key="CloseButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#AA0000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#202020" CornerRadius="5" BorderThickness="1" BorderBrush="#444">
        <Grid>

            <!-- Custom Title Bar -->
            <Border Background="#2E2E2E" Height="30" VerticalAlignment="Top" MouseDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock Text="Chat App" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="—" Width="40" Height="30" Click="Minimize_Click" Style="{StaticResource TitleBarButtonStyle}"/>
                        <Button Content="❐" Width="40" Height="30" Click="Maximize_Click" Style="{StaticResource TitleBarButtonStyle}"/>
                        <Button Content="X" Width="40" Height="30" Click="Close_Click" Style="{StaticResource CloseButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area (Shifted down below title bar) -->
            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="SidebarColumn" Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" Background="#3E3E3E">
                    <StackPanel>
                        <Button x:Name="ToggleMenuButton" Content="☰" FontSize="24" Click="ToggleMenuButton_Click" />

                        <StackPanel x:Name="MenuItemsPanel" Visibility="Collapsed" Margin="0,20,0,0">
                            <Button Content="CHANGE USER NAME" Margin="5" />
                            <Button Content="CONNECT" Margin="5" />
                            <Button Content="DISCONNECT" Margin="5" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Main Chat Area -->
                <Grid Grid.Column="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                        <StackPanel x:Name="MessageContainer">
                            <Border HorizontalAlignment="Left" Background="Blue" CornerRadius="15" Margin="0,10,0,0" Padding="10">
                                <TextBlock Text="PlaceHolder" FontFamily="Comic Sans MS" Foreground="White" FontSize="21" TextWrapping="Wrap" Width="250"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Row="1" Background="LightGreen" CornerRadius="15" Padding="10">
                        <TextBox x:Name="MessageInput"
                                 Text="Your message"
                                 FontFamily="Comic Sans MS"
                                 Foreground="White"
                                 FontSize="21"
                                 Background="LightGreen"
                                 BorderThickness="0"
                                 TextWrapping="Wrap"
                                 KeyDown="MessageInput_KeyDown"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
