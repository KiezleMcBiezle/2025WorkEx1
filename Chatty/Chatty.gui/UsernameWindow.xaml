<Window x:Class="ChatappUI.UsernameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Username"  
        WindowStartupLocation="CenterScreen"
        Height="450"
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- STYLES FOR HOVER EFFECTS -->
    <Window.Resources>
        <!-- Base style for Minimize and Maximize buttons -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Special style for the Close button (red hover) -->
        <Style x:Key="CloseButtonStyle" BasedOn="{StaticResource TitleBarButtonStyle}" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#AA0000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#202020" CornerRadius="5" BorderThickness="1" BorderBrush="#444">
        <Grid>

            <!-- Custom Title Bar -->
            <Border Background="#2E2E2E" Height="30" VerticalAlignment="Top" MouseDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock Text="Chat App" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="—" Width="40" Height="30" Click="Minimize_Click" Style="{StaticResource TitleBarButtonStyle}"/>
                        <Button Content="❐" Width="40" Height="30" Click="Maximize_Click" Style="{StaticResource TitleBarButtonStyle}"/>
                        <Button Content="X" Width="40" Height="30" Click="Close_Click" Style="{StaticResource CloseButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Margin="20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Welcome To Chatty!" FontSize="16" Margin="0,0,0,10" Foreground="Orange" />
                    <TextBlock Text="Enter your username:" FontSize="16" Margin="0,0,0,10" Foreground="Orange"/>
                    <TextBox x:Name="UsernameInput" Width="250" FontSize="16" Margin="0,0,0,10" />
                    <Button Content="Start Chatting" Width="150" Click="StartChat_Click" Background="LightGreen" />
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</Window>
