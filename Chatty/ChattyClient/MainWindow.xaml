<Window x:Class="ChattyClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ChattyClient.ViewModel"
        mc:Ignorable="d"
        Title="Chatty Client" Height="600" Width="800">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Custom button style that maintains colors when disabled -->
        <Style x:Key="ColoredButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter x:Name="contentPresenter"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            Focusable="False"
                                            RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar column -->
            <ColumnDefinition Width="{Binding SidebarWidth}"/>
            <!-- Main chat area column -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <Border Grid.Column="0" 
                Background="LightGray" 
                BorderBrush="DarkGray" 
                BorderThickness="0,0,2,0"
                Visibility="{Binding SidebarVisibility}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Username Label -->
                <TextBlock Grid.Row="0" 
                           Text="Enter Username:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>

                <!-- Username TextBox -->
                <TextBox Grid.Row="1" 
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Height="30"
                         Margin="0,0,0,10"/>

                <!-- Connect Button -->
                <Button Grid.Row="2" 
                        Content="Connect" 
                        Command="{Binding ConnectCommand}" 
                        Height="35"
                        Background="LimeGreen"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,0,10"
                        Style="{StaticResource ColoredButtonStyle}"/>

                <!-- Spacer -->
                <Border Grid.Row="4"/>

                <!-- Disconnect Button -->
                <Button Grid.Row="5" 
                        Content="Disconnect" 
                        Command="{Binding DisconnectCommand}" 
                        Height="35"
                        Background="Red"
                        Foreground="White"
                        FontWeight="Bold"
                        Style="{StaticResource ColoredButtonStyle}"/>
            </Grid>
        </Border>

        <!-- MAIN CHAT AREA -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <!-- Toggle button row -->
                <RowDefinition Height="Auto"/>
                <!-- Message display area -->
                <RowDefinition Height="*"/>
                <!-- Message input area -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TOGGLE SIDEBAR BUTTON -->
            <Button Grid.Row="0" 
                    Content="{Binding ToggleButtonText}"
                    Command="{Binding ToggleSidebarCommand}"
                    HorizontalAlignment="Left"
                    Width="30"
                    Height="30"
                    Margin="10,10,0,0"
                    FontSize="16"
                    FontWeight="Bold"/>

            <!-- MESSAGE DISPLAY AREA -->
            <Border Grid.Row="1" 
                    BorderBrush="Black" 
                    BorderThickness="2" 
                    Margin="10,10,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header showing message format -->
                    <TextBlock Grid.Row="0" 
                               Text="[Timestamp](Username) message" 
                               Background="White"
                               Padding="10,5"
                               FontStyle="Italic"
                               Foreground="Gray"/>

                    <!-- Messages list -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  Background="White"
                                  x:Name="MessagesScrollViewer">
                        <ListBox ItemsSource="{Binding Messages}" 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                               TextWrapping="Wrap" 
                                               Margin="5"
                                               FontFamily="Consolas"
                                               FontSize="12"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- MESSAGE INPUT AREA -->
            <Grid Grid.Row="2" Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Message input with placeholder -->
                <Grid Grid.Column="0">
                    <TextBox Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}" 
                             Height="40"
                             VerticalContentAlignment="Center"
                             FontSize="14"
                             Padding="10,0"
                             KeyDown="TextBox_KeyDown"/>

                    <!-- Placeholder text -->
                    <TextBlock Text="Enter message here..." 
                               Foreground="Gray"
                               FontSize="14"
                               Padding="15,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentMessage}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentMessage}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Send Button -->
                <Button Grid.Column="1" 
                        Content="Send" 
                        Command="{Binding SendMessageCommand}" 
                        Width="80" 
                        Height="40"
                        Margin="10,0,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Background="DodgerBlue"
                        Foreground="White"
                        Style="{StaticResource ColoredButtonStyle}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>