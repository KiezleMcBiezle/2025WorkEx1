<Window x:Class="HumaniChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HumaniChat" xmlns:viewmodel="clr-namespace:HumaniChat.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="650" Width="1200"
        Background="#121212"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2"
                Background="#2A2A2A"
                MouseDown="Border_MouseDown">

            <Grid HorizontalAlignment="Stretch">
                <Label Content="HumaniChat"
                       Foreground="Gray"
                       FontWeight="SemiBold"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"/>
                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">

                    <Button Width="20" Height="20"
                            Content="_"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            Click="ButtonMinimize_Click"/>

                    <Button Width="20" Height="20"
                            Content="□"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            Click="WindowStateButton_Click"/>

                    <Button Width="20" Height="20"
                            Content="✕"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            Click="CloseButton_Click"/>


                </StackPanel>

            </Grid>
        </Border>


        <Grid Background="#333333"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Content="Contacts"
                   VerticalAlignment="Center"
                   FontWeight="Medium"
                   Foreground="Gray"
                   FontStyle="Italic"
                   Margin="8,0,0,0"/>
            <ListView ItemsSource="{Binding Contacts}"
                      Background="Transparent"
                      BorderThickness="0"
                      Grid.Row="1"
                      ItemContainerStyle="{StaticResource ContactCard}" SelectionChanged="ListView_SelectionChanged"/>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Background="#262626">

                <Border CornerRadius="25"
                    Width="30" Height="30"
                    Background="#00ffa6"
                    Margin ="18,0,0,0"/>
                <StackPanel VerticalAlignment="Center">
                    <Label Content="Username"
                           FontWeight="SemiBold"
                           Foreground="White"
                           Margin="0,-5,0,-5"
                           />
                    <Label Content="Custom Status"
                            FontWeight="SemiBold"
                            FontSize="10"
                            Foreground="Gray"
                            Margin="0,-6,0,-5"
                           />
                </StackPanel>

            </StackPanel>



        </Grid>

        <Grid Grid.Column="1"
              Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#2F3136"
                    BorderThickness="0,0,0,2">
                <Grid HorizontalAlignment="Stretch"
                      Margin="8">

                    <Label Content="@Username"
                           Foreground="LightGray"
                           Margin="5,0,5,0"
                           FontStyle="Italic"
                           VerticalAlignment="Center"
                           FontWeight ="Bold"/>
                    <StackPanel Orientation ="Horizontal"
                                 HorizontalAlignment="Right">
                        <Image Width="50" Height="40"
                               RenderOptions.BitmapScalingMode="Fant"
                               Margin="5,0,5,0"
                              
                               Source="./Icons/phone.png"/>
                        <Image Width="30" Height="30"
                               RenderOptions.BitmapScalingMode="Fant"
                               Margin="5,5,10,0"
                               
                               Source="/Icons/camera.png" 
                               />
                    </StackPanel>

                </Grid>
            </Border>

            <ListBox ItemsSource="{Binding Messages}" Grid.Row="1">
                <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Message}" 
                                               TextWrapping="Wrap" 
                                               Margin="5"
                                               FontFamily="Consolas"
                                               FontSize="12"/>
                </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <DockPanel Grid.Row="2">
                <Button
                Content="Send"
                DockPanel.Dock="Right"
                HorizontalAlignment="Right"
                MinWidth="75"
                Background="DarkGray"
                Command="{Binding SendMessageCommand}" />
                <TextBox Text="{Binding CurrentMessage, UpdateSourceTrigger=PropertyChanged}" />

            </DockPanel>

        </Grid>
    </Grid>
</Window>
